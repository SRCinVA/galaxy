#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg1.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width/2 # notice had this same property in the python file
    perspective_point_y: self.height * 0.75
    
